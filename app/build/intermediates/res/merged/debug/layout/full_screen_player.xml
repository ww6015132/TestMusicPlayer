<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bg">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:weightSum="100">
    <ImageView         
        android:id="@+id/musique_image_full"
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:layout_weight="85"/>
	<RelativeLayout
		    android:id="@+id/mini_player"
		    android:layout_width="match_parent"
		    android:layout_height="0dip"
		    android:layout_weight="15"
		    >

		    <RelativeLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="1px"
			    android:background="#747474"/>	
		    
			<LinearLayout 
			    android:id="@+id/player"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="horizontal"
			    android:weightSum="60"
				android:gravity="center_vertical" > 	  	
			    	<ImageView 
				        android:id="@+id/button_repeat_full"
					    android:layout_width="0dip"
					    android:layout_weight="10"
					    android:layout_height="wrap_content"
					    android:layout_margin="20dip"
					    android:src="@drawable/repeat"
					    android:gravity="center_horizontal|center_vertical"/> 
			    	<ImageView 
				        android:id="@+id/button_last_full"
					    android:layout_width="0dip"
					    android:layout_weight="10"
					    android:layout_height="wrap_content"
					    android:layout_margin="20dip"
					    android:src="@drawable/previous"
					    android:gravity="center_horizontal|center_vertical"/> 
			    	<ImageView 
				        android:id="@+id/button_play_full"
					    android:layout_width="0dip"
					    android:layout_weight="20"
					    android:layout_height="wrap_content"
					    android:layout_margin="10dip"
					    android:src="@drawable/play"
					    android:gravity="center_horizontal|center_vertical"/> 
			    	<ImageView 
				        android:id="@+id/button_next_full"
					    android:layout_width="0dip"
					    android:layout_weight="10"
					    android:layout_height="wrap_content"
					    android:layout_margin="20dip"
					    android:src="@drawable/next"
					    android:gravity="center_horizontal|center_vertical"/> 
			    	<ImageView 
				        android:id="@+id/button_shuffle_full"
					    android:layout_width="0dip"
					    android:layout_weight="10"
					    android:layout_height="wrap_content"
					    android:layout_margin="20dip"
					    android:src="@drawable/shuffle"
					    android:gravity="center_horizontal|center_vertical"/>   
			</LinearLayout>
		</RelativeLayout>
		
</LinearLayout>
		
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical" 
		    android:weightSum="100">
		    <ImageView         
			    android:layout_width="match_parent"
			    android:layout_height="0dip"
			    android:layout_weight="87"/>
		    <LinearLayout 
		    	android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_alignTop="@+id/mini_player" 
		    	android:layout_marginLeft="8dip"
		    	android:layout_marginRight="8dip">
		        <TextView 
			    	android:id="@+id/time_played"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
		    		android:layout_above="@id/musique_image"
			    	android:textSize="12dip"/>
		        <TextView 
			    	android:id="@+id/total_time"
					android:gravity="right"
			    	android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
		    		android:layout_above="@id/musique_image"
			    	android:textSize="12dip"/>
		    </LinearLayout>
			<SeekBar
		    	android:id="@+id/progression_seek"
            android:paddingLeft="0dip"
            android:paddingRight="0dip"
		    	android:layout_width="fill_parent"
		    	android:layout_height="wrap_content" 
			/>
		</LinearLayout>
</RelativeLayout>